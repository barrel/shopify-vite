{
  "extends": "tsconfig/base.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"],
      "~/*": ["frontend/*"],
      "@@/*": ["resources/js/*"],
      "@modules/*": ["frontend/modules/*"]
    }
  }
}
